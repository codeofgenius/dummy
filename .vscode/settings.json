{
    "workbench.colorTheme": "Default Dark Modern",
    "workbench.iconTheme": "material-icon-theme",
    "editor.codeActionsOnSave": {
        "source.addMissingImports": "explicit",
        "source.fixAll.eslint": "explicit"
    },
    "emmet.variables": {
        "lang": "ja"
    },
    "files.eol": "\n",
    "eslint.runtime": "node",
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnType": false,
    "editor.formatOnPaste": false,
    "editor.formatOnSave": true,
    "editor.rulers": [200],
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    //"editor.wordWrap": "off",
    "editor.renderControlCharacters": true,
    "editor.quickSuggestions": {
        "comments": false
    },
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 100,
    "prettier.singleQuote": false,
    "prettier.printWidth": 80,
    "prettier.semi": false,
    "prettier.tabWidth": 4,
    "prettier.ignorePath": ".prettierignore",
    "css.lint.unknownAtRules": "ignore",
    "redhat.telemetry.enabled": false,
    "explorer.fileNesting.enabled": true,
    "search.exclude": {
        "**/node_modules": true
    },
    "eslint.options": {
        "overrideConfigFile": "eslint.config.js"
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "livePreview.openPreviewTarget": "Embedded Preview",
    "livePreview.serverKeepAliveAfterEmbeddedPreviewClose": 0,
    //"livePreview.defaultPreviewPath": "/index.html",
    // "livePreview.autoRefreshPreview": "On All Changes in Editor",
    // "livePreview.debugOnExternalPreview": true,
    // "livePreview.autoRefreshPreview": "On Changes to Saved Files",
    // "livePreview": {
    //     "defaultPreviewPath": "/index.html",
    //     "autoRefreshPreview": "On All Changes in Editor",
    // },
    // "livePreview.autoRefreshPreview": "On All Changes in Editor",
    // "livePreview.tasks.runTaskWithExternalPreview": true
    // "livePreview.defaultPreviewPath": "/index.html", // 起動時のデフォルト
}
