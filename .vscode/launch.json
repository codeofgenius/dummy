{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:5500/${fileDirnameBasename}/${fileBasename}",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "msedge",
            "request": "launch",
            "name": "Edge / Current File",
            "file": "${file}"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Chrome / Current File",
            "file": "${file}"
        },
    ]
}
